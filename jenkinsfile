pipeline {
    agent any

    stages {
        stage('Checkout') {
            steps {
                // Clone the repository
                git url: 'https://github.com/practice-org-123/BloqWeb-Test', branch: 'main'
            }
        }

        stage('Install Dependencies') {
            steps {
                // Install Node.js dependencies
                sh 'npm install -g newman'
            }
        }


    post {
        success {
            publishHTML(target: [
                reportName : 'My Report',
                reportDir  : '/var/lib/jenkins/jobs/BloqWeb/htmlreports/HTML_20Report',
                reportFiles: 'index.html',
                keepAll    : true,
                alwaysLinkToLastBuild: true,
                allowMissing: false
            ])
        }
    }
}


    stages {
        stage('Checkout') {
            steps {
                // Clone the repository
                git url: 'https://github.com/your-repo.git', branch: 'main'
            }
        }
        stage('Install Dependencies') {
            steps {
                script {
                    // Install Newman and htmlextra reporter globally
                    sh 'npm install -g newman newman-reporter-htmlextra'
                }
            }
        }
        stage('Run Postman Collection') {
            steps {
                script {
                    // Run the Postman collection with htmlextra reporter
                    sh 'newman run path/to/your/postman_collection.json -r htmlextra'
                }
            }
        }
    }
}
