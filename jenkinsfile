pipeline {
    agent any

    stages {
        stage('Checkout') {
            steps {
                // Clone the repository
                git url: 'https://github.com/practice-org-123/BloqWeb-Test', branch: 'main'
            }
        }

        stage('Install Dependencies') {
            steps {
                // Install Node.js dependencies
                sh 'npm install -g newman'
                sh 'npm install -g newman-reporter-htmlextra'

            }
        }

        stage('Run Postman Collection') {
            steps {
                // Run the Postman collection
                sh 'newman run Health-Check.postman_collection.json -r htmlextra'
            }
        }

        stage('Generate Report') {
            steps {
                // Generate the HTML report
                sh '''
                mkdir -p /newman/reports/html_report
                echo "<html><body><h1>Report</h1></body></html>" > /newman/reports/html_report/index.html
                '''
            }
        }
    }

    post {
        success {
            publishHTML(target: [
                reportName : 'My Report',
                reportDir  : '/newman/reports/html_report',
                reportFiles: 'index.html',
                keepAll    : true,
                alwaysLinkToLastBuild: true,
                allowMissing: false
            ])
        }
    }
}
